@page
@model IndexModel
@{
    ViewData["Title"] = "Carreras";
}

<h1 class="text-center mb-4">Carreras</h1>

<div class="mb-3 text-start">
    <a asp-page="Create" class="btn btn-success">
        <i class="bi bi-plus"></i> Crear Nueva Carrera
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th class="text-center" style="width: 250px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Carreras)
        {
            <tr>
                <td>@item.Nombre</td>
                <td class="text-center">
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">Detalles</a>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>