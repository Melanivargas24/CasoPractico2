@page
@model CreateModel
@{
    ViewData["Title"] = "Crear Nueva Carrera";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="d-flex justify-content-center">
    <div class="card p-4 shadow-sm" style="min-width: 400px;">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Carrera.Nombre" class="form-label"></label>
                <input asp-for="Carrera.Nombre" class="form-control" />
                <span asp-validation-for="Carrera.Nombre" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-page="/Carreras/Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>