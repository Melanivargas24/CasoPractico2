@page
@model Universidad.Pages.Grupos.IndexModel
@{
    ViewData["Title"] = "Lista de Grupos";
}

<h1 class="text-center mb-4">Grupos</h1>

<p>
    <a asp-page="Create" class="btn" style="background-color: #7d428f; color: white;"> <i class="bi bi-plus"></i>Agregar Nuevo Grupo</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Horario</th>
            <th>Materia</th>
            <th class="text-center" style="width: 250px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var grupo in Model.Grupos)
    {
        <tr>
            <td>@grupo.Horario</td>
            <td>@grupo.Materia.Nombre</td>
            <td class="text-center">
                <div class="d-flex justify-content-center gap-2">
                    <a asp-page="Details" asp-route-id="@grupo.Id" class="btn btn-info btn-sm text-white">Detalles</a>
                    <a asp-page="Edit" asp-route-id="@grupo.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-page="Delete" asp-route-id="@grupo.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>